<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TimeMachine"/>

    <style name="TimeMachine.Message"/>

    <style name="TimeMachine.Message.Frame">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/message_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/message_margin_vertical</item>
    </style>

    <style name="TimeMachine.Message.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorLink">#76a1ff</item>
        <item name="android:autoLink">web|email|phone</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TimeMachine.Message.Container">
        <item name="android:textColorLink">#76a1ff</item>
        <item name="android:autoLink">web|email|phone</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:paddingTop">@dimen/message_padding_normal</item>
        <item name="android:paddingBottom">@dimen/message_padding_normal</item>
    </style>

    <style name="TimeMachine.Message.Container.Out">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/message_padding_normal</item>
        <item name="android:paddingRight">@dimen/message_padding_arrow</item>
        <item name="android:paddingTop">@dimen/message_padding_normal</item>
        <item name="android:layout_marginLeft">@dimen/message_padding_arrow</item>
        <item name="android:layout_marginRight">@dimen/message_margin_outline</item>
        <item name="android:background">@drawable/bg_msg_out</item>
    </style>

    <style name="TimeMachine.Message.Container.In">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/message_padding_arrow</item>
        <item name="android:paddingRight">@dimen/message_padding_normal</item>
        <item name="android:layout_marginLeft">@dimen/message_margin_outline</item>
        <item name="android:layout_marginRight">@dimen/message_padding_arrow</item>
        <item name="android:background">@drawable/bg_msg_in</item>
    </style>

    <style name="TimeMachine.RippleCompat">
        <item name="android:background">@drawable/bg_selectable</item>
    </style>

    <style name="TimeMachine.Input"/>

    <style name="TimeMachine.Input.EditText">
        <item name="android:paddingLeft">@dimen/input_field_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/input_field_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/input_field_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/input_field_padding_vertical</item>
        <item name="android:minHeight">@dimen/input_field_height</item>
        <item name="android:maxHeight">@dimen/input_field_max_height</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/input_cursor</item>
        <item name="android:textColorHint">@color/hint_light</item>
        <item name="android:textColor">@color/light</item>
    </style>

    <style name="TimeMachine.Input.ActionButton"
        parent="RippleCompat">
        <item name="android:layout_width">@dimen/input_field_height</item>
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="RippleCompat">
        <item name="android:background">@drawable/bg_selectable</item>
    </style>

</resources>